{
  "name": "text-analyzer",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/server.ts",
    "prisma:migrate": "prisma migrate dev",
    "prisma:generate": "prisma generate",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@prisma/client": "^4.0.0",
    "express": "^4.18.1",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "winston": "^3.17.0",
    "winston-logzio": "^5.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.8",
    "@types/morgan": "^1.9.9",
    "@types/node": "^18.0.0",
    "jest": "^28.1.3",
    "nodemon": "^3.1.10",
    "prisma": "^4.0.0",
    "supertest": "^6.3.4",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/__tests__"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
